<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/linear_padding"
        android:paddingLeft="@dimen/linear_padding"
        android:paddingRight="@dimen/linear_padding"
        android:paddingTop="@dimen/linear_padding">

        <com.sara.project.CircleTransform
            android:layout_width="@dimen/layout_width_hight"
            android:layout_height="@dimen/layout_width_hight"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/logo_marginTop"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_marginTop"
            android:gravity="center"
            android:text="@string/about"
            android:textSize="23dp" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>